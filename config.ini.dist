[settings]
### Configuration via menu interface
language = en
debug = False
screen_timeout = 0
screensaver_mode = clock
random_track_count = 20
random_radio_count = 1
random_recent_album_custom_days = 30
color_theme = autumn

[screen]
current_screen =
width =
height =
i2c_address =
### For OLED SPI/I2C MONO:
type =
gpio_dc =
gpio_rst =
### Overide default settings:
#refresh_interval = 0.05
#rotation = 90
#display_format = BGR
#diag = 2.0
#invert = True

[nowplaying]
show_icons = True
show_extra_infos = True
show_progress_barre = True
show_clock = True
### Spectrum need Loopback actived in Moode > configure > audio > alsa options
show_spectrum = False
show_peak = False

[spectrum]
num_bars = 21

[manual]
### Blacklist files or folders to avoid reading them via the randoms functions:
blacklist_audio_paths = OSDISK/Stereo Test/LRMonoPhase4.flac, OSDISK/System Sounds/ReadyChime.flac
### Add or modify genres for tagging playlists, according to your preferences:
genres = Varied, Relax, Rhythmic, Nocturne, Instru

[input]
### use_lirc is configured during install_lirc_remote.py. You'll can activate it manually if you've installed LIRC yourself.
use_lirc = False
use_mpr121 = False
use_buttons = False
use_rotary = False

[mpr121]
i2c_address = 0x5A
int_pin = 4
use_gesture = False
### Default values for all pads:
touch_threshold = 30
release_threshold = 20

[mpr121_pads]
### Set KEY and thresholds for each pad if needed:
### "pad3 = KEY_YOURKEY" without threshold if you want to use default thresold or "pad3 = KEY_YOURKEY, 80, 75" if individual configuration is required.
pad0 = KEY_UP
pad1 = KEY_DOWN
pad2 = KEY_LEFT
pad3 = KEY_RIGHT
pad4 = KEY_OK
pad5 = KEY_BACK
pad6 = KEY_CHANNELUP
pad7 = KEY_CHANNELDOWN
pad8 = KEY_PLAY
pad9 = KEY_INFO
pad10 = KEY_STOP
pad11 = KEY_POWER
### The 13th virtual proximity pad is not currently used:
#pad12 = KEY_PROX, 80, 75

[buttons]
### buttons_bouncetime_ms: hardware debounce time for GPIO interrupts
buttons_bouncetime_ms = 5
### If you use buttons, uncomment and Modify the gpio pins to suit your configuration.
### Required keys (essential for OliPi MoOde navigation):
#KEY_UP = 17
#KEY_DOWN = 16
#KEY_LEFT = 13
#KEY_RIGHT = 12
#KEY_OK = 6
#KEY_BACK = 5
#KEY_PLAY = 4
#KEY_CHANNELUP = 26
#KEY_CHANNELDOWN = 27
#KEY_INFO = 25

[rotary]
### if you use rotary encoder, uncomment and modify to suit your configuration.
### rotary_divider: number of transitions per detent (use 1 or 2 for standard encoders, 4 for high-resolution types)
rotary_divider = 2
### rotary_bouncetime_ms: hardware debounce time for GPIO interrupts
rotary_bouncetime_ms = 1
### rotary_min_tick_ms: minimum time between valid ticks (helps reject jitter or contact bounce)
rotary_min_tick_ms = 1
### rotary_invert: If your pin are reverted change to true
rotary_invert = False
### KEY_UP/DOWN (volume in now-playing screen) need to be commented in [buttons] section if you use:
#pin_a = 17
#pin_b = 16

[remote_mapping]
### Use install_lirc_remote.py for remap your remote key or modify manualy here.
### KEY_OLIPIMOODE = YOUR_REMOTE_KEY
### Leave " — " if you don't need to remap KEY
### Required keys (essential for OliPi MoOde navigation)
KEY_UP = —
KEY_DOWN = —
KEY_LEFT = —
KEY_RIGHT = —
KEY_OK = —
KEY_BACK = —
KEY_CHANNELUP = —
KEY_CHANNELDOWN = —
KEY_PLAY = —
KEY_INFO = —
### Optional keys (additional multimedia controls)
KEY_STOP = —
KEY_NEXT = —
KEY_PREVIOUS = —
KEY_FORWARD = —
KEY_REWIND = —
KEY_VOLUMEUP = —
KEY_VOLUMEDOWN = —
KEY_MUTE = —
KEY_POWER = —